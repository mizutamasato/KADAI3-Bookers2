<%= render 'users/list', user: @user, book: @new_book %>


<div class="col-md-8 offset-md-1">
  
  <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td>
          <%= link_to user_path(@book.user.id) do %>
            <%= image_tag @book.user.get_profile_image(80, 80) %><br>
            <%= @book.user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@book.id) do %>
            <%= @book.title %>
          <% end %>
        </td>
        <td>
          <%= @book.body %>
        </td>


          <% if @book.user == current_user %>
        <td>
          <%= link_to "Edit", edit_book_path(@book.id), :class=>"btn btn-success" %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(@book.id), method: :delete, :class=>"btn btn-sm btn-danger destroy_book_261" %>
        </td>
          <% end %>
        </tr>
    </tbody>
</table>
