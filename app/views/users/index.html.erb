<%= render 'users/list', user: @user, book: @new_book %>


<div class="col-md-8 offset-md-1">
<h2>Users</h2>
<table class="table">
  <thead>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
  </thead>
  <% @users.each do |users|%>
    <tbody>
      <tr>
        <td>
          <%= image_tag users.get_profile_image(100, 100) %>
        </td>
        <td>
          <%= users.name %>
        </td>
        <td>
          <%= link_to "Show", user_path(users.id) %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>