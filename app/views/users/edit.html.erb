<p id="notice">

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <div class="form-group">
        <%= form_with model: @user do |f| %>
          <label for="user_name">Name</label><br>
        <%= f.text_field :name, autofocus: true, minlength: 2, maxlength: 20, id:"user_name" %><br>
          <label for="user_image">Image</label><br>
        <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %><br>
          <label for="user_introduction">Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true, maxlength: 50, id:"user_introduction" %><br>
        <%= f.submit "Update User" %>
        <% end %>
      </dic>
    </dic>
  </dic>
</dic>
